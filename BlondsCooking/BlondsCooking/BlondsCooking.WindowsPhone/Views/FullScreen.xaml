<common:BasePage
    x:Class="BlondsCooking.Views.FullScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlondsCooking.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:BlondsCooking.Common"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding FullScreen, Source={StaticResource Locator}}">

    <Grid>
        <Image HorizontalAlignment="Stretch" Source="{Binding ImageUrl}"></Image>
    </Grid>
</common:BasePage>
